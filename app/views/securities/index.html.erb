<h2 class="ui center aligned icon header">
    <i class="circular blue lock icon"></i>
    Security Types
</h2>

<% if Security.count > 0 %>

  <div class="ui grid">
    <div class="eight column row">
      <div class="right floated column">
        <%= link_to 'Add Security', new_security_path, class: 'ui button primary' %>
      </div>
    </div>
  </div>

  <table class="ui striped selectable celled table">
      <thead>
          <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Status</th>
              <th>Admin</th>
          </tr>
      </thead>
      <tbody>
          <%= render @securities %>
      </tbody>
  </table>

  <div align="center">
      <%= will_paginate @securities %>
  </div>
<% else %>
<h3 class="ui top attached header">
  No Security Types
</h3>
<div class="ui attached segment">
  <p>
    There currently no security types. To add one click the "Add Security Type" button. <br />
    <%= link_to 'Add Security', new_security_path, class: 'ui button primary' %>
  </p>
</div>
<% end %>
