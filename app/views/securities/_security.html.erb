<tr>
    <td><%= security.name %></td>
    <td><%= truncate(security.description, length: 27) %></td>
    <td><%= security.status ? "Enabled" : "Disabled" %></td>
    <td>
        <%= link_to "View", security_path(security.id) %>
        <% if current_user.admin? %>
            |
            <%= link_to "Delete", security_path(security.id), method: :delete, data: { confirm: "Are you sure you want to delte this security type?"} %>
        <% end %>
    </td>
</tr>
