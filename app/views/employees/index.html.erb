<h2 class="ui center aligned icon header">
  <i class="circular blue users icon"></i>
  Employee Management System
</h2>

<div class="ui grid">
  <div class="eight column row">
    <div class="right floated column">
      <%= link_to 'Add Employee', new_employee_path, class: 'ui button primary' %>
    </div>
  </div>
</div>

<table class="ui striped selectable celled table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail</th>
            <th>Job Title</th>
            <th>Manager</th>
            <th>Status</th>
            <th>Admin</th>
        </tr>
    </thead>
    <tbody>
        <%= render @employees %>
    </tbody>
</table>

<div align="center">
    <%= will_paginate @employees %>
</div>
